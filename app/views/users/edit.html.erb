










<div class="edit_user_info" style="max-width: 768px; margin: 0 auto">
  <%= form_for :user,url: user_path(@user) ,method: :patch do |f|  %>
    <%=f.text_field :name, class:'form-control' %>
    <br>
    <%=f.text_field :surname, class:'form-control' %>
    <br>
    <%= f.file_field( :avatar, class: 'file__input form-control')%>
    <br>
    <%=f.submit "Редактировать", class:"btn btn-success" %>
  <% end %>

</div>

